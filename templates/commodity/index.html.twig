<!DOCTYPE html>

<title>Commodity index</title>

{% block body %}
    <h1>Commodity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commodity in commodities %}
            <tr>
                <td>{{ commodity.id }}</td>
                <td>{{ commodity.title }}</td>
                <td>{{ commodity.price }}</td>
                <td>
                    <a href="{{ path('app_commodity_show', {'id': commodity.id}) }}">show</a>
                    <a href="{{ path('app_commodity_edit', {'id': commodity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commodity_new') }}">Create new</a>
{% endblock %}
